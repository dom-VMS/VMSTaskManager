<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-1 bg-light"><!--Grey Column--></div>
        <div class="col-sm-10">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><%= link_to 'Home', home_path %></li>
                    <li class="breadcrumb-item"><a>Users</a></li>
                </ol>
            </nav>
            <!--Large to XL Screen Size-->
            <div class="container-fluid d-none d-lg-block">
                <div class="row">
                    <div class="col-6">
                        <h1>Users</h1>
                        <%= link_to fa_icon('user-plus', text:'Add User'), new_user_path,  class: 'btn btn-primary'%>
                    </div>
                    <div class="col-6">
                        <%= form_tag(users_path, method: :get, class: 'form-inline float-right', html: { autocomplete: "off" }) do %>
                            <%= text_field_tag(:search, params[:search], class: 'form-control float-right', placeholder: 'Search for User') %>
                            <%= submit_tag ("Search"), class: 'btn btn-primary float-right'%>
                        <% end %>
                    </div>
                </div>
            </div>
            <!--Any size screen less than large-->
            <div class="container-fluid d-lg-none">
                <div class="row">
                    <h1>Users</h1>
                </div>
                <div class="row">
                    <div class="col-6">
                        <%= link_to fa_icon('user-plus', text:'Add User'), new_user_path,  class: 'btn btn-primary'%>
                    </div>
                    <br><br>
                    <div class="col-6">
                        <%= form_tag(users_path, method: :get, class: 'form-inline') do %>
                            <%= text_field_tag(:search, params[:search], class: 'form-control float-right', placeholder: 'Search for User') %>
                            <%#= submit_tag ("Search"), class: 'btn btn-primary float-right'%>
                        <% end %>
                    </div>
                </div>
            </div>
            <br>
            <div class="container-fluid">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Employee Number</th>
                            <th>Employee Name</th>
                            <th>Email Address</th>
                        </tr>
                    </thead>
                    <% @users.each do |user| %>
                    <tbody>
                        <tr>
                            <td><%= user.employee_number %></td>
                            <td><%= link_to user.full_name, user_path(user) %></td>
                            <td><%= user.email %></td>
                        </tr>                
                    </tbody>
                    <% end %>
                </table>
            </div>
        </div>
        <div class="col-sm-1 bg-light"><!--Grey Column--></div>
    </div>
</div>