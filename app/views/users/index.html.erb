<% if logged_in? && isAdmin? %> 
<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-1 bg-light"></div>
        <div class="col-sm-10">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/home/index">Home</a></li>
                    <li class="breadcrumb-item"><a>Users</a></li>
                </ol>
            </nav>
            <h1>Users</h1>
            <%= link_to fa_icon('user-plus', text:'Add User'), new_user_path,  class: 'btn btn-primary'%><br><br>
                <table class="table table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Employee Number</th>
                            <th>Employee Name</th>
                            <th>Email Address</th>
                        </tr>
                    </thead>
                    <% @users.each do |user| %>
                    <tbody>
                        <tr>
                            <td><%= user.employee_number %></td>
                            <td><%= link_to user.full_name, user_path(user) %></td>
                            <td><%= user.email %></td>
                        </tr>                
                    </tbody>
                    <% end %>
            </table>
            <%= link_to 'Back', admin_path %>
        </div>
        <div class="col-sm-1 bg-light"></div>
    </div>
</div>
<% else %>
     <%= render 'errors/not_signed_in' %>
<% end %>