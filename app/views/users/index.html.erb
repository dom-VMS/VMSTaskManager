<% if logged_in? && isAdmin? %> 
    <h1>Users</h1>
    <%= link_to 'Create New User', new_user_path %><br><br>
        <table class="table table-sm ">
            <thead>
                <tr>
                    <th>Employee Number</th>
                    <th>Employee Name</th>
                    <th>Email Address</th>
                    <th> <th>
                </tr>
            </thead>
            <% @users.each do |user| %>
            <tbody>
                <tr>
                    <td><%= user.employee_number %></td>
                    <td><%= user.full_name %></td>
                    <td><%= user.email %></td>
                    <td><%= link_to 'View', user_path(user) %></td>
                </tr>                
            </tbody>
            <% end %>
    </table>
    <%= link_to 'Back', admin_path %>
<% else %>
     <%= render 'errors/not_signed_in' %>
<% end %>