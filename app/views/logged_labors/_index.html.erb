<div class="container-fluid">
    <div class="row">
        <div class="col">
            <!-- New LoggedLabor button -->
            <div style="width: 50%; display: inline;" class="pull-right text-align-middle">
                <%= (link_to fa_icon('clock', text:'Log time'), new_task_logged_labor_path(@task), class: "btn btn-primary") if @task_type_option&.can_log_labor%> 
            </div>
            <p>
                <h2>
                    <strong>Total Time Spent:</strong>
                    <%= LoggedLabor.hours_spent_on_task(@task)%> hours
                </h2>
            </p>
        </div>
    </div>
    <!--Display Labor Entries for a Task -->
    <% if @task.logged_labors.present? %>
        <% (@task.logged_labors).each do |logged_labor| %>
            <div class="list-group list-group-flush">
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="col-2 float-left"><%= link_to logged_labor.user.full_name, logged_labor.user %></div>
                    <div class="col-7"><%= sanitize logged_labor.description %></div>
                    <div class="col-2"><%= (logged_labor.labor_date).strftime("%m/%d/%Y") if logged_labor.labor_date.present? %></div>
                    <div class="col-1"><%= link_to "Edit", edit_task_logged_labor_path(@task, logged_labor) if logged_labor.user_id == current_user.id%></div>
                </div>
            </div> 
        <% end %>
    <% end %>
</div>