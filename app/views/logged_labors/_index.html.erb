<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div style="width: 50%; display: inline;" class="pull-right text-align-middle">
                <%= (link_to fa_icon('clock', text:'Log time'), new_task_logged_labor_path(@task), class: "btn btn-primary") if @task_type_option&.can_log_labor%> 
            </div>
            <p>
                <h2>
                    <strong>Total Time Spent:</strong>
                    <%= LoggedLabor.hours_spent_on_task(@task)%> hours
                </h2>
            </p>
        </div>
    </div>
    <% if @task.logged_labors.present? %>
        <% (@task.logged_labors).each do |logged_labor| %>
            <div class="list-group list-group-flush">
                <div class="list-group-item py-2 d-flex justify-content-between align-items-center list-group-item-linkable">
                    <%= logged_labor.user.full_name %>
                    <%= sanitize logged_labor.description %>
                    <%= (logged_labor.labor_date).strftime("%m/%d/%Y") if logged_labor.labor_date.present? %>
                    <%= link_to "Edit", edit_task_logged_labor_path(@task, logged_labor) if logged_labor.user_id == current_user.id%>
                </div>
            </div> 
        <% end %>
