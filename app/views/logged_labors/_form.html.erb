<%#= form_with model: [@task, @task.logged_labors.build], local: true do |form| %>
<% puts "Loggedlabor.persisted: #{@logged_labor}"%>
<%= form_with model: [@task, (@logged_labor.persisted? ? @logged_labor : @task.logged_labors.build)], local: true, html: { autocomplete: "off" } do |form| %>
 <!-- Error Messages -->
  <% if @logged_labor.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@logged_labor.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @logged_labor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <p>
      <%= form.label :labor_date, 'Date' %><br>
      <% if @logged_labor.persisted? %>
        <%= form.text_field :labor_date, value: @logged_labor.labor_date.strftime("%Y/%m/%d"), data:{ provide:'datepicker' }, id: 'datepicker', class: 'form-control datepicker w-50' %>
      <% else %>
        <%= form.text_field :labor_date, data:{ provide:'datepicker' }, id: 'datepicker', class: 'form-control datepicker w-50', placeholder: 'Enter Date'  %>
      <% end %>    
    </p>
    
    <p>
      <%= form.label :time_spent %><br>
      <%= form.number_field :time_spent, class: 'form-control', placeholder: "Hours", step: 0.01 %>
    </p>
  
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description, class: 'form-control',  placeholder: "Briefly explain what you did during this time." %>
    </p>
  </div>
  
  <% user_id = current_user.id %>

  <%= form.hidden_field 'user_id', :value => user_id %>
  <%= form.hidden_field 'task_id', :value => @task.id %>

  <p>
    <%= form.submit 'Enter Time', class: 'btn btn-primary btn-lg btn-block' %>
  </p>
  <p>
<% end %>

<script type="text/javascript">
  $(function() {
    $('.datepicker').datepicker({dateFormat: 'yy-mm-dd ', timeFormat: 'hh:mm:ss ', ampm: true});
    //$(".datepicker").datepicker("setDate", null);
  });
</script>