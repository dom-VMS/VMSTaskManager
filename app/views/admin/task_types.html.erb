<% if logged_in? == true && isAdmin? == true %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home/index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Groups</li>
        </ol>
    </nav>
    <div class="container-fluid">
        <%= link_to fa_icon('plus-circle', text: 'Add Project'), new_task_type_path, class: 'btn btn-primary' %><br> 
        <h1 class="text-center">Projects</h1><br>
    </div>
    <div class="container-fluid">
        <div class="row">
        <% @task_types.each do |task_type|%>
            <div class="col-sm-4">
                <div class="card card-hover text-center mb-3">
                    <div class="card-header">  
                    <strong><%= task_type.name %></strong>
                    </div>
                    <div class="card-body text-center">
                        <p class="card-text"><%= task_type.description.truncate_words(10) %></p>
                        <%= link_to "View Tasks", task_type_path(task_type), class: "btn btn-primary text-center"%>
                        <%= link_to "Edit", edit_task_type_path(task_type), class: "btn btn-secondary"%>
                    </div>
                </div>
            </div>
        <% end%>
        </div>
    </div>
<% else %>
        <%= render 'errors/not_signed_in' %>
<% end %>

                        
