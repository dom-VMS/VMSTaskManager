<% if logged_in? == true && isAdmin? == true %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home/index">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin/task_types">Groups</a></li>
        </ol>
    </nav>
    <%= link_to fa_icon('plus-circle', text: 'Add Department'), new_task_type_path %><br><br> 
    <div class="container-fluid">
        <div class="card-columns">
        <% @task_type.each do |task_type|%>
       
                <div class="card">
                    <div class="card-header"> 
                        <strong><%= task_type.name %></strong>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><%= task_type.description %></p>
                        <%= link_to "View Tasks", task_type_path(task_type), class: "btn btn-primary"%>
                        <%= link_to "Edit", edit_task_type_path(task_type), class: "btn btn-secondary"%>

                    </div>
                </div>
        <%end%>
        </div>
    </div>  
    <%= link_to 'Back', home_index_path %>
<% else %>
        <%= render 'errors/not_signed_in' %>
<% end %>

