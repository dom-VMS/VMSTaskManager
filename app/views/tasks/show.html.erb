<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-1 bg-light"></div>
        <div class="col-sm-10" id="task"><%= render @task %></div>
        <div class="col-sm-1 bg-light"></div>
    </div>
</div>

<% if params[:param] == 'edit' && @task_type_option&.can_update%>
    <script>
        $('#task-form').html("<%= j (render 'form') %>");
        $('#task-form').slideDown(350);
        $('#task-info-small').hide();
    </script>
<% end %>
