<div class="row">
<!--Navigation-->
    <!--(Nav) Large to XL Screen Size-->
    <div class="col-2 d-none d-lg-block">
        <!--Pill Navigation Wrapper-->
        <div class="nav flex-column nav-pills " id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <% @task_types.each do |task_type| %>
                <!--Pill (Vertical)-->
                <a class="nav-link <%= 'active' if task_type == @task_types.first %> border border-light" id="v-pills-<%=task_type.id%>-tab" data-toggle="pill" href="#v-pills-<%=task_type.id%>" role="tab" aria-controls="v-pills-<%=task_type.id%>" aria-selected="true"><%=task_type.name%> 
                    <span class="badge badge-light right"><%= @task.project(task_type.id).size %></span>
                </a>
            <% end %>
        </div>
    </div>

    <!--(Nav) Any size screen less than large-->
    <div class="container-fluid d-lg-none">
        <!--Scrollable Pills -->
        <nav class="pillable">
            <!--Pill Navigation Wrapper-->
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <% @task_types.each do |task_type| %>
                    <!--Pill (Horizontal)-->
                    <li class="nav-item">
                        <a class="nav-link <%= 'active' if task_type == @task_types.first %> border border-primary" id="v-pills-<%=task_type.id%>-tab" data-toggle="pill" href="#v-pills-<%=task_type.id%>" role="tab" aria-controls="v-pills-<%=task_type.id%>" aria-selected="true" style="white-space: nowrap; overflow: hidden;"><%=task_type.name%> 
                            <span class="badge badge-light right"><%= @task.project(task_type.id).size %></span>
                        </a>  
                    </li>
                <% end %>
            </ul>
        </nav>
    </div>
<!--./Navigaiton-->

<!--Content-->
    <div class="col-sm-12 col-md-12 col-lg-10 col-xl-10">
        <!--Content Wrapper-->
        <div class="tab-content" id="v-pills-tabContent">
        <% (@task_types).each do |task_type| %>
            <div class="tab-pane fade show <%= 'active' if task_type == @task_types.first %>" id="v-pills-<%=task_type.id%>" role="tabpanel" aria-labelledby="v-pills-<%=task_type.id%>-tab">
                <!-- New Task Button for TaskType -->
                <% if TaskTypeOption.get_task_type_specific_options(current_user, task_type)&.can_create %>
                    <div class="row">
                        <div class="col">
                            <%= link_to fa_icon('plus-circle', text:'New Task'), new_task_type_task_path(task_type), class: "btn btn-primary float-right"%>
                        </div>
                    </div>
                    <br>
                <% end %>
                <!-- Display all tasks assigned to user within a given project -->
                <div class="row">
                    <div class="col">
                        <% (@task.project(task_type.id)).each do |task|%>
                            <div class="list-group list-group-flush">
                                <div class="list-group-item py-2 d-flex justify-content-between align-items-center list-group-item-linkable <%='list-group-item-info' unless task.attributes['position'].nil? %> <%='list-group-item-warning' if task.status != 3 && (task.isVerified == false) %>" data-link="<%= task_path(task)%>">
                                    <%= task.title.blank? ? (link_to ("[##{task.id}]  " + task.description.truncate_words(15)), task_path(task)) : (link_to ("[##{task.id}]  " + task.title.truncate_words(15)), task_path(task)) %>
                                    <%= task_badges(task) %>
                                </div>
                            </div>
                        <%end%> 
                        <br>
                    </div>
                </div>
            </div>
        <% end %>
        </div>
    </div>
<!--./Content-->
</div>