<div class="row">
    <!--Large to XL Screen Size-->
    <div class="col-2 d-none d-lg-block">
        <div class="nav flex-column nav-pills " id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <% @task_types.each do |task_type| %>
            <a class="nav-link <%= 'active' if task_type == @task_types.first %> border border-light" id="v-pills-<%=task_type.id%>-tab" data-toggle="pill" href="#v-pills-<%=task_type.id%>" role="tab" aria-controls="v-pills-<%=task_type.id%>" aria-selected="true"><%=task_type.name%> 
                <span class="badge badge-light right"><%= @task.where(task_type_id: task_type.id).size %></span>
            </a>
        <% end %>
        </div>
    </div>
    <!--Any size screen less than large-->
    <div class="container-fluid d-lg-none">
        <nav class="pillable">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <% @task_types.each do |task_type| %>
                        <li class="nav-item">
                            <a class="nav-link <%= 'active' if task_type == @task_types.first %> border border-primary" id="v-pills-<%=task_type.id%>-tab" data-toggle="pill" href="#v-pills-<%=task_type.id%>" role="tab" aria-controls="v-pills-<%=task_type.id%>" aria-selected="true" style="white-space: nowrap; overflow: hidden;"><%=task_type.name%> 
                                <span class="badge badge-light right"><%= @task.where(task_type_id: task_type.id).size %></span>
                            </a>  
                        </li>
                <% end %>
            </ul>
        </nav>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-10 col-xl-10">
        <div class="tab-content" id="v-pills-tabContent">
        <!-- Display each project in a pill -->
        <% @task_types.each do |task_type| %>
            <div class="tab-pane fade show <%= 'active' if task_type == @task_types.first %>" id="v-pills-<%=task_type.id%>" role="tabpanel" aria-labelledby="v-pills-<%=task_type.id%>-tab">
            <!-- Display all tasks assigned to user within a given project -->
            <% (@task.where(task_type_id: task_type.id)).each do |task|%>
                <div class="list-group list-group-flush sortable">
                    <div class="list-group-item py-2 d-flex justify-content-between align-items-center list-group-item-linkable <%='list-group-item-info' unless task.attributes['position'].nil? %>" data-link="<%= task_path(task)%>">
                        <%= task.title.blank? ? (link_to ("[##{task.id}]  " + task.description.truncate_words(15)), task_path(task)) : (link_to ("[##{task.id}]  " + task.title.truncate_words(15)), task_path(task)) %>
                        <%= task_priority(task) %>
                    </div>
                </div>
            <%end%> 
            <br>
            </div>
        <% end %>
        </div>
    </div>
</div>