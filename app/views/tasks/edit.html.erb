<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'Home', home_path %></li>
    <li class="breadcrumb-item"><%= link_to 'Projects', task_types_path %></li>
    <li class="breadcrumb-item"><%= link_to @task_type.name, task_type_path(@task_type) %></li>
    <li class="breadcrumb-item"><%= link_to "Task ##{@task.id}", task_path(@task)%></li>
    <li class="breadcrumb-item active" aria-current="page">Edit</li>
  </ol>
</nav>
<div class="container">
  <div class="py-4 text-center">
      <h1>Edit Task # <%=@task.id%></h1>
  </div>
  <%= render 'form' %>
  <%if isAdmin? %>  
      <%= (link_to fa_icon('trash-alt', text:'Delete Task'), @task, :method => :delete, :confirm => "Are you sure?" ) if @task_type_option.can_delete%><br>
  <%end%>
  <%= link_to 'Back', task_path %>
</div>