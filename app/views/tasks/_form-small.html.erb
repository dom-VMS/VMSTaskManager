<%= form_with model: @task, local: true do |form| %>
<!-- Error Messages -->
    <% if @task.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@task.errors.count, "error") %> prohibited
                this task from being saved:
            </h2>
            <ul>
                <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="mb-3">
        <p>
            <%= form.label :priority %><br>
            <%= form.select(:priority, options_for_select([['Low', 1],['Normal', 2],['High', 3],['Urgent', 4]], @task.priority), include_blank: "Select Priority", class: 'form-control') %>
        </p>
    </div>
    <div class="mb-3 ">
        <p> 
            <%= form.label :status %><br>
            <%= form.select(:status, options_for_select([['Incomplete', 1],['In-progress', 2],['Complete', 3]], @task.status), include_blank: "Select Status", class: 'form-control') %>
        </p>
    </div>
    <div class="mb-3 w-50 ">
        <p> 
            <%= form.label :percentComplete, 'Percent Complete' %><br>
            <%= form.range_field :percentComplete, :in => 0..100, :step => '10', class: 'form-control slider'%>
        </p>
    </div>

    <!-- HERE -->
    <div class="mb-3">
        <p>
            <%= fields_for :task_assignments do |f| %>
                <%= f.label :assigned_to_id, 'Assignee'%>
                <%= link_to fa_icon('plus-circle')%><br>
                <% if @assignee.present?%>
                    <% @assignee.each do |assignee| %>
                        <%= f.select(:assigned_to_id, options_from_collection_for_select(@assignable_users, :id, :full_name, assignee.id),  include_blank: "All", class: 'form-control') %>
                        <%= f.hidden_field :assignment_id, value: assignee.id %>
                        <%= (link_to fa_icon('trash-alt'), 
                                [assignee.task, assignee],
                                title: 'Remove',
                                method: :delete,
                                data: { confirm: 'Are you sure you want to remove this assignment?' },
                                :remote => true, :class =>'delete_task_assignment' ) if @task.persisted? %><br>
                    <%end%>
                <% else %>
                    <%= f.select(:assigned_to_id, options_from_collection_for_select(@assignable_users, :id, :full_name), include_blank: "All", class: 'form-control') %>
                <% end %>
            <% end %>
        </p>
    </div>
    <p>
        <strong>Attachments: </strong>
    </p>
    <p>
        <%= form.label :attachments, 'File attachments' %>
        <%= form.file_field :attachments, multiple: true %>
    </p>

    <div class="mb-3">
       <% @task.attachments.each_with_index do |attachment, index|%>
            <br><a href="<%= attachment.url %>" target="_blank"><%= image_tag(attachment.url, size:'32') if !attachment.blank? %></a>
            <%= (link_to fa_icon('trash-alt', text:'Delete'), task_attachment_path(@task, index),
                :method => :delete,
                data: { confirm: 'Are you sure you want to delete this attachment?' }) %>
        <%end%>
    </div>
    <p>
        <%= form.submit 'Save', class: 'btn btn-primary btn-lg ' %>
        <%= link_to 'Cancel', task_path(@task), remote: true, class:'btn btn-secondary btn-lg' %><br>
    </p>
<% end %>
<script>
    $(".btn").click(function() {
        $('#task-form').slideUp(350);
        $('#task-info-small').show();
    })
</script>