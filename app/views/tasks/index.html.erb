<h1>Current Tasks</h1>


<%= link_to 'Create New Task', new_task_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Priority</th>
    <th>Status</th>

  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td>
        <% if task.priority != nil %>
          <% if task.priority == 1 %>
                  Low
          <% elsif task.priority == 2 %>
                  Normal
          <% elsif task.priority == 3 %>
                  High
          <% elsif task.priority == 4 %>
                  Urgent
          <% end %>
          <% else %>
          <% end%>
      </td>
      <td>
        <% if task.status != nil %>
          <% if task.status == 1 %>
              Incomplete
          <% elsif task.status == 2 %>
              In-Progress
          <% elsif task.status == 3 %>
              Complete
          <% end %>
        <%else%>
        <%end%>
      </td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Delete', task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this task?' } %></td>
    </tr>
  <% end %>
</table>