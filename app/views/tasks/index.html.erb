<div class="container-fluid">
    <h1>All Tasks</h1>
    <% unless @task_type_option.nil? %>
        <% if @task_type_option.can_create %>
            <%= link_to fa_icon('plus-circle', text:'New Task'), new_task_path(:task_type_id => params[:id]), class: "btn btn-primary" %><br><br>
        <% end %>
    <% end %>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8">
            <% unless @task.nil? %>
                <h2>Your current tasks:</h2>
                <table class="table table-borderless table-hover table-sm table-responsive">
                    <thead>
                        <tr>
                            <th>Department</th>
                            <th>Title</th>
                            <th>Priority</th>
                        </tr>
                    </thead>
                    <% @task.each do |task| %>
                    <tbody> 
                        <tr>
                            <td><%= (TaskType.find_by_id(task.task_type_id)).name %></td>
                            <td><%= link_to "#{task.title.truncate_words(5)}", task_path(task)  %></td>
                            <td><%= task.priority.nil? ? "" : task_priority(task) %></td>
                        </tr>
                    </tbody>
                    <% end %>
                </table><br>
            <% else %>
                <h3>Assigned to you: N/A</h3>
            <%end%>
        </div>
        <div class="col-sm-4">
        </div>
    </div>
</div>
