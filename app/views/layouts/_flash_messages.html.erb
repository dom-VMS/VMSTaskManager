<!-- Flash Messages -->
<div class="container">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= flash_class(key)%> text-center" role="alert">
            <%= sanitize(value) %>
        </div>
    <% end %>
</div>

<script>
    $(".alert" ).fadeOut(3000);
    $(".alert-success" ).fadeOut(3000);
    $(".alert-danger" ).fadeOut(3000);
</script>