<div class="col-sm-10">
    <h4><%= link_to comment.commenter.full_name, comment.commenter %><small> <%= time_ago_in_words(comment.created_at)%> ago</small></h4>
    <p>
        <%= sanitize comment.body.html_safe unless comment.body.nil?  %>
        <% comment.attachments.each_with_index do |attachment, index|%>
            <br><%= link_to fa_icon('paperclip', text: "#{attachment.file.filename}"), attachment.url%>
        <%end%>
    <% unless @task_type_option.nil?%>
        <% if @task_type_option.can_delete %>
            <p>
                <%= link_to fa_icon('trash', text: 'Remove Comment'), [comment.task, comment],
                            method: :delete,
                            data: { confirm: 'Are you sure you want to delete this comment?' } if @task_type_option&.isAdmin %>
            </p>
        <% end %>
    <% end %>
    </p>       
    <hr>
</div>