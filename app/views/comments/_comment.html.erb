<div class="col-sm-10">
    <h4><%= comment.commenter %><small> <%= time_ago_in_words(comment.created_at)%> ago</small></h4>
    <p>
        <%= sanitize comment.body  %>
        <% comment.attachments.each_with_index do |attachment, index|%>
            <br><a href="<%= attachment.url %>" target="_blank"><%= image_tag(attachment.url, size:'32') if !attachment.blank? %></a>
        <%end%>
    <% unless @task_type_option.nil?%>
        <% if @task_type_option.can_delete %>
            <p>
                <%= link_to 'Delete Comment', [comment.task, comment],
                            method: :delete,
                            data: { confirm: 'Are you sure you want to delete this comment?' } %>
            </p>
        <% end %>
    <% end %>
    </p>       
    <br>
</div>