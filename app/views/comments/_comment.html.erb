<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>
 
<p>
  <strong>Comment:</strong>
  <%= comment.body %>
  <% comment.file_attachments.each do |file_attachment|%>
    <% if (file_attachment.file).present? %>
        <a href="<%= file_attachment.file.url %>" target="_blank"><%= image_tag(file_attachment.file.url, size:'32') if !file_attachment.blank? %></a>
    <%end%>
  <% end %>
</p>


<!-- #TODO: IF commenterID == currentUserID || currentUserID.isAdmin == True, then display. Else, hide. -->
<% unless @task_type_option.nil?%>
  <% if @task_type_option.can_delete %>
    <p>
      <%= link_to 'Delete Comment', [comment.task, comment],
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete this comment?' } %>
    </p>
  <% end %>
<% end %>