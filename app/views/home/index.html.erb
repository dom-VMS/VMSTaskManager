<% if logged_in? %>
<div class="container-fluid">
  <h1>Welcome,</h1>
  <h1><strong><%= current_user.full_name %></strong></h1>
  <h5><%=Time.now.strftime("%m/%d/%Y") %></h5>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8">
            <% unless @task.nil? %>
                <h2>Available to you:</h2>
                <table class="table table-borderless table-hover table-sm table-responsive">
                    <thead>
                        <tr>
                            <th>Department</th>
                            <th>Title</th>
                            <th>Priority</th>
                        </tr>
                    </thead>
                    <% @task.each do |task| %>
                    <tbody> 
                        <tr>
                            <td><%= (TaskType.find_by_id(task.task_type_id)).name %></td>
                            <td><%= link_to "#{task.title.truncate_words(5)}", task_path(task)  %></td>
                            <td><%= task.priority.nil? ? "" : task_priority(task) %></td>
                        </tr>
                    </tbody>
                    <% end %>
                </table><br>
            <% else %>
                <h3>Assigned to you: N/A</h3>
            <%end%>
        </div>
        <div class="col-sm-4">
        <% unless @reoccuring_event.nil? %>
            <h2>Coming up:</h2>
            <table class="table table-borderless table-hover table-sm table-responsive">
                <thead>
                    <tr>
                        <th>Event Type</th>
                        <th>Title</th>
                        <th>Due</th>
                    </tr>
                </thead>
                <% @reoccuring_event.each do |reoccuring_task|%>
                <tbody class="text-center"> 
                    <tr>
                        <td><%= (ReoccuringEventType.find_by_id(reoccuring_task.reoccuring_event_type.id)).title %></td>
                        <td><%= link_to (Task.find_by_id(reoccuring_task.task_id)).title, Task.find_by_id(reoccuring_task.task_id)%></td>
                        <td><%= reoccuring_task.next_date %></td>
                    </tr>
                </tbody>
                <% end %>
            </table><br>
        <%end%>
        </div>
    </div>
</div>
<% else %>
  <%= render 'errors/not_signed_in' %>
<% end %>



