<h1>VMS Task Manager</h1>
<%puts session.to_json%>
<%puts current_user.to_json%>
<% if logged_in? %>
  <h3>Welcome, <%= current_user.full_name %>! </h3>
  <h3>Please select a department to view tasks.</h3>

  <% @task_types.each do |type| %>
  <h2><%= link_to "#{type.name}", task_type_path(type) %></h2>
  <% end %>

  <% if isAdmin? == true %>
    <%= link_to 'Administration',  admin_path %>
  <% end%>

  <br><%= link_to 'Sign Out', logout_path,
                  method: :delete,
                  data: { confirm: 'Are you sure you want to sign out?' } %>

<% else %>
  <%= render 'errors/not_signed_in' %>
<% end %>



