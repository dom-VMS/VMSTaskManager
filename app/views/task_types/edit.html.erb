<% if logged_in? %>
    <h1>Edit Task Type</h1>

    <%= form_with model: @task_type, local: true do |form| %>

    <p>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </p>

    <p>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
    </p>

    <p>
        <%= form.submit %>
    </p>
    
    <% end %>

    <%= link_to 'Back', task_types_path %>
<% else %>
     <%= render 'errors/not_signed_in' %>
<% end %>