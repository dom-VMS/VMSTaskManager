<% if logged_in? %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home/index">Home</a></li>
            <li class="breadcrumb-item"><%= link_to "Projects", task_types_path%></li>
            <li class="breadcrumb-item active" aria-current="page"><%= sanitize @task_type.name %></li>
        </ol>
    </nav>
    <div class="container-fluid">
        <h1><%= sanitize @task_type.name  %></h1>
        <p>
            <strong>Description:</strong>
            <%= sanitize @task_type.description  %>
        </p>
        <% unless @task_type_option.nil? %>
            <% if @task_type_option.can_create %>
                <%= link_to fa_icon('plus-circle', text:'New Task'), new_task_path(:task_type_id => params[:id]), class: "btn btn-primary" %>
                <%= (link_to fa_icon('edit', text: 'Edit'), edit_task_type_path(@task_type), class: "btn btn-secondary") if isAdmin? == true %><br><br>

            <% end %>
        <% end %>
    </div>
    <div class="container-fluid"><br>
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-comment-tab" data-toggle="tab" href="#nav-comment" role="tab" aria-controls="nav-comment" aria-selected="true">Tasks</a>
                <a class="nav-item nav-link" id="nav-time-spent-tab" data-toggle="tab" href="#nav-time-spent" role="tab" aria-controls="nav-time-spent" aria-selected="false">Users</a>
                <a class="nav-item nav-link" id="nav-edit-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Activity</a>
            </div>
        </nav><br>
        <div class="row">
            <div class="col-2 d-none d-lg-block">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-assigned-to-you-tab" data-toggle="pill" href="#v-pills-assigned-to-you" role="tab" aria-controls="v-pills-assigned-to-you" aria-selected="true">Assigned to You</a>
                    <a class="nav-link" id="v-pills-all-tasks-tab" data-toggle="pill" href="#v-pills-all-tasks" role="tab" aria-controls="v-pills-all-tasks" aria-selected="false">All Tasks</a>
                    <a class="nav-link" id="v-pills-recently-complete-tab" data-toggle="pill" href="#v-pills-recently-complete" role="tab" aria-controls="v-pills-recently-complete" aria-selected="false">Recently Complete</a>
                </div>
            </div>
            <div class="container-fluid d-lg-none">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="v-pills-assigned-to-you-tab" data-toggle="pill" href="#v-pills-assigned-to-you" role="tab" aria-controls="v-pills-assigned-to-you" aria-selected="true">Assigned to You</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="v-pills-all-tasks-tab" data-toggle="pill" href="#v-pills-all-tasks" role="tab" aria-controls="v-pills-all-tasks" aria-selected="false">All Tasks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="v-pills-recently-complete-tab" data-toggle="pill" href="#v-pills-recently-complete" role="tab" aria-controls="v-pills-recently-complete" aria-selected="false">Recently Complete</a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-10 col-xl-10 ">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-assigned-to-you" role="tabpanel" aria-labelledby="v-pills-assigned-to-you-tab">
                        <!-- Tasks Assigned to User -->
                        <% unless @tasks_assigned_to_user.nil? %>
                            <% @tasks_assigned_to_user.each do |task| %>
                                <div class="list-group list-group-flush">
                                    <div class="list-group-item py-2 d-flex justify-content-between align-items-center list-group-item-linkable" data-link="<%= task_path(task)%>">
                                        <%= task.title.empty? ? (link_to task.description.truncate_words(5), task_path(task)) : (link_to task.title.truncate_words(5), task_path(task)) %>
                                        <%= task_priority(task) %>
                                    </div>
                                </div> 
                            <%end%>
                        <%end%>
                    </div>
                    <!-- All Tasks Available -->
                    <div class="tab-pane fade" id="v-pills-all-tasks" role="tabpanel" aria-labelledby="v-pills-all-tasks-tab">
                        <% @tasks.each do |task| %>
                            <div class="list-group list-group-flush">
                                <div class="list-group-item py-2 d-flex justify-content-between align-items-center list-group-item-linkable" data-link="<%= task_path(task)%>">
                                    <%= task.title.empty? ? (link_to task.description.truncate_words(5), task_path(task)) : (link_to task.title.truncate_words(5), task_path(task)) %>
                                    <%= task_priority(task) %>
                                </div>
                            </div> 
                        <%end%>
                    </div>
                    <!-- Recently Completed Tasks -->
                    <div class="tab-pane fade" id="v-pills-recently-complete" role="tabpanel" aria-labelledby="v-pills-recently-complete-tab">
                        <% unless (@task_type.tasks.where('status = 3')).empty? %>
                            <% (@tasks_recently_complete).each do |task| %>
                                <div class="list-group list-group-flush">
                                    <div class="list-group-item py-2 d-flex justify-content-between align-items-center list-group-item-linkable" data-link="<%= task_path(task)%>">
                                        <%= task.title.empty? ? (link_to task.description.truncate_words(5), task_path(task)) : (link_to task.title.truncate_words(5), task_path(task)) %>
                                        <%= task_priority(task) %>
                                    </div>
                                </div> 
                            <%end%>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% else %>
     <%= render 'errors/not_signed_in' %>
<% end %>

<script>
$(document).ready(function() {
    $('.list-group-item-linkable').on('click', function() {
        // same window/tab:
        window.location.href = $(this).data('link');

        // new window/tab:
        //window.open($(this).data('link'));
    });

    $('.list-group-item-linkable a, .list-group-item-linkable button')
    .on('click', function(e) {
        e.stopPropagation();
    });
});
</script>