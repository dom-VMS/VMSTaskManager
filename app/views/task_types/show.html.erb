<% if logged_in? %>
    <h1><%= @task_type.name %></h1>
    <p>
        <strong>Description:</strong>
        <%= @task_type.description %>
    </p>

    <% if @task_type_option.can_create %>
        <%= link_to 'Create New Task', new_task_path(:task_type_id => params[:id]) %><br>
    <% end %>
    <% unless get_tasks_assigned_to_user_for_task_type(@task_type).empty? %>
        <h2>Assigned to you:</h2>
        <table>
            <tr>
                <th>Title</th>
                <th>Priority</th>
                <th>Status</th>
            </tr>
            <% get_tasks_assigned_to_user_for_task_type(@task_type).each do |task| %>
            <tr>
                <td><%= task.title %></td>
                <td><%= task.priority.nil? ? "" : task_priority(task) %></td>
                <td><%= task.status.nil? ? "" : task_status(task) %></td>
                <td><%= link_to 'Show', task_path(task) %></td>
            </tr>
            <% end %>
        </table><br>
    <% else %>
        <h3>Assigned to you: N/A</h3>
    <%end%>
    <h2>All Open Tasks:</h2>
    <table>
        <tr>
            <th>Title</th>
            <th>Priority</th>
            <th>Status</th>
        </tr>
        <% (@task_type.tasks.where('status != 3')).each do |task| %>
        <tr>
            <td><%= task.title %></td>
            <td><%= task.priority.nil? ? "" : task_priority(task) %></td>
            <td><%= task.status.nil? ? "" : task_status(task) %></td>
            <td><%= link_to 'Show', task_path(task) %></td>
        </tr>
        <%end%>
    </table><br>

    <h2>Recently Completed:</h2>
    <table>
        <tr>
            <th>Title</th>
            <th>Priority</th>
            <th>Status</th>
        </tr>
        <% (@task_type.tasks.where('status = 3')).each do |task| %>
        <tr>
            <td><%= task.title %></td>
            <td><%= task.priority.nil? ? "" : task_priority(task) %></td>
            <td><%= task.status.nil? ? "" : task_status(task) %></td>
            <td><%= link_to 'Show', task_path(task) %></td>
        </tr>
        <%end%>
    </table><br>
    <%= link_to 'Back', home_index_path %>
<% else %>
     <%= render 'errors/not_signed_in' %>
<% end %>