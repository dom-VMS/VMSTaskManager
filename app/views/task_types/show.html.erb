<!-- 
    Displays Task Type, Task Type Description, and all related tasks.
-->
<h1><%= @task_type.name %></h1>
<p>
    <strong>Description:</strong>
    <%= @task_type.description %>
</p>
<h2>Current Tasks</h2>

<table>
    <tr>
      <th>Title</th>
      <th>Priority</th>
      <th>Status</th>
    </tr>
    <% (Task.all).each do |task| %>
    <% if task.task_types_id == @task_type.id%>
        <tr>
          <td><%= task.title %></td>
          <td>
            <% if task.priority != nil %>
              <% if task.priority == 1 %>
                      Low
              <% elsif task.priority == 2 %>
                      Normal
              <% elsif task.priority == 3 %>
                      High
              <% elsif task.priority == 4 %>
                      Urgent
              <% end %>
              <% else %>
              <% end%>
          </td>
          <td>
            <% if task.status != nil %>
              <% if task.status == 1 %>
                  Incomplete
              <% elsif task.status == 2 %>
                  In-Progress
              <% elsif task.status == 3 %>
                  Complete
              <% end %>
            <%else%>
            <%end%>
          </td>
          <td><%= link_to 'Show', task_path(task) %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Delete', task_path(task),
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete this task?' } %></td>
        </tr>
      <%end%>
  <% end %>
  </table>

<%= link_to 'Back', tasks_path %>